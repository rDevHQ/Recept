[Unit]
Description=Recept Deployment Service
After=network.target

[Service]
Type=oneshot
User=root
# Adjust user if not running as root, but typical for /opt/recept setups unless permisions are handled
ExecStart=/opt/recept/scripts/deploy.sh
WorkingDirectory=/opt/recept/repo

[Install]
WantedBy=multi-user.target
